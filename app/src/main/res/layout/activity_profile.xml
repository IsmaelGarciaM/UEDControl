<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_profile"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.ismael.uedcontrol.ProfileActivity">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:srcCompat="@mipmap/ic_launcher"
        android:id="@+id/imgProfile"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Nombre Usuario"
        android:id="@+id/txvTherapistName"
        android:layout_below="@id/imgProfile"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Apellidos Usuario"
        android:layout_marginTop="20dp"
        android:id="@+id/txvTherapistSurname"
        android:layout_below="@id/txvTherapistName"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="DNI Usuario"
        android:layout_marginTop="20dp"
        android:id="@+id/txvTherapistDni"
        android:layout_below="@id/txvTherapistSurname"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Especialidad del terapeuta"
        android:layout_marginTop="20dp"
        android:id="@+id/txvTypeTherapist"
        android:layout_below="@id/txvTherapistDni"
        />


</RelativeLayout>
