<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/itemStyle"
    >

    <TextView
        android:layout_margin="10dp"
        android:text="@string/stringActivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txvTitle"
        style="@style/titleText"/>



    <TextView
android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txvTitleActivity"
        android:layout_toRightOf="@id/txvTitle"
        style="@style/titleText"/>


    <TextView
        android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txvTypeActivity"
        android:layout_below="@id/txvTitle"
        style="@style/titleText"/>


    <TextView
        android:layout_margin="10dp"
        android:layout_width="200dp"
        android:lines="3"
        android:layout_height="wrap_content"
        android:id="@+id/txvDescriptionActivity"
        android:layout_below="@id/txvTypeActivity"
        style="@style/titleText"/>

    <TextView
        android:layout_margin="10dp"
        android:layout_width="wrap_content"
        android:layout_alignBaseline="@id/txvDescriptionActivity"
        android:layout_height="wrap_content"
        android:id="@+id/txvDateActivity"
        android:layout_below="@id/txvTitle"
android:layout_alignParentRight="true"
        android:textSize="10dp"
        android:layout_marginRight="10dp"
        style="@style/titleText"/>

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/txvTime"
    android:textSize="12sp"
    android:layout_alignBaseline="@id/txvTitleActivity"
    android:layout_alignParentRight="true"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@id/txvDescriptionActivity"
        android:background="@color/black">

    </LinearLayout>

</RelativeLayout>
